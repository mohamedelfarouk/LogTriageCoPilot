{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/triage-report.schema.json",
  "title": "Triage Report",
  "type": "object",
  "properties": {
    "incidentTitle": {
      "type": "string",
      "description": "The headline summary of the crash"
    },
    "timeWindow": {
      "type": "object",
      "properties": {
        "firstTimestamp": { "type": "string" },
        "lastTimestamp": { "type": "string" }
      },
      "required": ["firstTimestamp", "lastTimestamp"]
    },
    "requestIds": {
      "type": "array",
      "items": { "type": "string" }
    },
    "primaryErrorLine": {
      "type": "string"
    },
    "primaryException": {
      "type": "object",
      "properties": {
        "class": { "type": "string" },
        "message": { "type": "string" }
      },
      "required": ["class", "message"]
    },
    "topAppFrames": {
      "type": "array",
      "items": { "type": "string" }
    },
    "causedByChain": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "class": { "type": "string" },
          "message": { "type": "string" }
        },
        "required": ["class", "message"]
      }
    },
    "signals": {
      "type": "array",
      "description": "The context log lines",
      "items": { "type": "string" }
    },
    "componentsDetected": {
      "type": "array",
      "items": { "type": "string" }
    },
    "securityFlags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "line": { "type": "string" }
        },
        "required": ["type", "line"]
      }
    },
    "noiseDroppedCount": {
      "type": "integer",
      "minimum": 0
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "incidentTitle",
    "timeWindow",
    "primaryErrorLine",
    "signals",
    "componentsDetected",
    "noiseDroppedCount"
  ],
  "additionalProperties": false
}
